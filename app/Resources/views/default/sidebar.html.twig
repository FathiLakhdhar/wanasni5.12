                <a class="user-panel text-center slideToggle">
                    <div class="image">
                        <img src="{{ asset(app.user.photo.webPath) }}" class="img-circle" alt="User Image">
                    </div>
                    <div class="info">
                        <p>{{ app.user.firstname ~' '~app.user.lastname }}</p>
                    </div>
                    <i class="fa fa-angle-down"></i>
                </a>

                <ul class="slideToggle-menu" style="display:none">
                    <li>
                        <a href="{{ path('fos_user_profile_show') }}"><i class="fa fa-user"></i>Profil</a>

{% trans_default_domain 'FOSUserBundle' %}


<div class="container">

    <ul id="nav-pills-h-profil-e" class="nav nav-pills nav-justified">
        <li class="triangle-down">
            <a href="{{ path('mes-trajets') }}">
                <i class="fa fa-car"></i>
                <p>Covoiturages</p>
            </a>
        </li>
        <li class="triangle-down">
            <a  href="#Avis">
                <i class="fa fa-star"></i>
                <p>Avis</p>
            </a>
        </li>
        <li class="triangle-down">
            <a  href="{{ path('mes-alertes') }}">
                <i class="fa fa-bullhorn"></i>
                <p>Alerts</p>
            </a>
        </li>
        <li class="triangle-down">
            <a  href="{{ path('fos_message_inbox') }}">
                <i class="fa fa-envelope-o"></i>
                <p>Messages</p>
            </a>
        </li>
        <li class="triangle-down">
            <a  href="#Notifications">
                <i class="fa fa-bell-o"></i>
                <p>Notifications</p>
            </a>
        </li>
        <li class="triangle-down active">
            <a  href="{{ path('fos_user_profile_edit') }}">
                <i class="flaticon-man flat-2x"></i>
                <p>Profil</p>
            </a>
        </li>
    </ul>
    <div class="tab-content thumbnail">

        <!--  Tab pane Covoiturages -->
        <div id="Covoiturages" class="tab-pane fade ">
            <div class="page-header">
                <h2 class="violet-red">Covoiturages</h2>
            </div>
        </div>
        <!-- end Tab pane Covoiturages -->

        <!--  Tab pane Avis -->
        <div id="Avis" class="tab-pane fade">
            <div class="page-header">
                <h2 class="violet-red">Avis</h2>
            </div>
        </div>
        <!-- end Tab pane Avis -->
        <!--  Tab pane Alerts -->
        <div id="Alerts" class="tab-pane fade">
            <div class="page-header">
                <h2 class="violet-red">Alerts</h2>
            </div>
        </div>
        <!-- end Tab pane Alerts -->

        <!-- Tab pane Notifications -->
        <div id="Notifications" class="tab-pane fade">
            <div class="page-header">
                <h2 class="violet-red">Notifications</h2>
            </div>
        </div>
        <!-- end Tab pane Notifications -->

        <!-- Tab pane Profile -->

        <div id="Profil" class="tab-pane fade in active">
            <div class="page-header">
                <h2 class="violet-red">Profil</h2>
            </div>


            <div class="row">

                <div class="col-md-4">
                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a data-toggle="pill" href="#info_personnel">Informations personnelles</a>
                        </li>
                        <li><a data-toggle="pill" href="#photo">Photo</a></li>
                        <li><a data-toggle="pill" href="#vehicule">Véhicule</a></li>
                        <li><a data-toggle="pill" href="#mot-de-passe">Mot de passe</a></li>
                        <li><a data-toggle="pill" href="#fermeture-de-compte">Fermeture de compte</a></li>
                    </ul>
                </div>

                <div class="col-md-8">

                    <div class="tab-content thumbnail">

                        <div id="info_personnel" class="tab-pane fade in active">
                            <div class="page-header">
                                <h2 class="violet-red">Informations personnelles</h2>
                            </div>

                            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

                            <div class="form-group">
                                <div class="row">

                                    <div class="col-md-3">
                                        {{ form_label(form.firstname) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_errors(form.firstname,{'attr':{'class':'text-danger'}}) }}
                                        {{ form_widget(form.firstname) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">

                                    <div class="col-md-3">
                                        {{ form_label(form.lastname) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_errors(form.lastname,{'attr':{'class':'text-danger'}}) }}
                                        {{ form_widget(form.lastname) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        {{ form_label(form.username) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_errors(form.username,{'attr':{'class':'text-danger'}}) }}
                                        {{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        {{ form_label(form.email) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}
                                        {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        {{ form_label(form.date_naissance) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_errors(form.date_naissance,{'attr':{'class':'text-danger'}}) }}
                                        {{ form_widget(form.date_naissance) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        {{ form_label(form.phone) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_errors(form.phone,{'attr':{'class':'text-danger'}}) }}
                                        {{ form_widget(form.phone) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        {{ form_label(form.minibio) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_errors(form.minibio,{'attr':{'class':'text-danger'}}) }}
                                        {{ form_widget(form.minibio) }}
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="row ">
                                    <div class="col-md-3">
                                        {{ form_label(form.current_password) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_errors(form.current_password,{'attr':{'class':'text-danger'}}) }}
                                        {{ form_widget(form.current_password,{'attr':{'class':'form-control'}}) }}
                                    </div>
                                </div>
                            </div>


                            <div class="text-center">
                                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-primary"/>
                            </div>
                            {{ form_end(form) }}

                        </div>


                        <div id="photo" class="tab-pane fade">
                            <div class="page-header">
                                <h2 class="violet-red">photo</h2>
                            </div>


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="text-center">
                                        <div class="update-photo">
                                            <img src="{{ asset('img/user.jpg') }}">
                                        </div>
                                        <p>Ajoutez une photo</p>
                                        <button class="btn btn-primary"><i class="fa fa-save"></i> Choisir une photo
                                        </button>
                                        <p>
                                            <small>2Mo maximum, PNG ou JPG.</small>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-group">
                                        <li class="list-group-item list-group-item-success"><i class="fa fa-check"></i>
                                            Comment choisir la bonne photo
                                        </li>
                                        <li class="list-group-item">Pas de lunettes de soleil</li>
                                        <li class="list-group-item">Face à l'objectif</li>
                                        <li class="list-group-item">Un seul visage</li>
                                        <li class="list-group-item">Claire et lumineuse</li>
                                    </ul>
                                </div>
                            </div>


                        </div>


                        <div id="vehicule" class="tab-pane fade">
                            <div class="page-header">
                                <h2 class="violet-red">Véhicule</h2>
                            </div>

                            <div class="row">
                                <div class="col-md-6">

                                    <a href="{{ path('car-add') }}" class="btn btn-primary">Ajouter un véhicule</a>

                                </div>
                            </div>

                        </div>


                        <div id="mot-de-passe" class="tab-pane fade">
                            <div class="page-header">
                                <h2 class="violet-red">Mot de Passe</h2>
                            </div>
                        </div>

                        <div id="fermeture-de-compte" class="tab-pane fade">
                            <div class="page-header">
                                <h2 class="violet-red">Fermeture de compte</h2>
                            </div>
                        </div>


                    </div>

                </div>
            </div>


        </div><!-- end Tab pane Profile -->
    </div>
</div>




